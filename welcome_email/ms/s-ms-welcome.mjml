        <mj-spacer height="10px" />
      </mj-column>
    </mj-section> 
    <mj-section padding="10px 12px" background-color="#000" background-url="https://www.moviesuggestions.com/black-bg.png">
      <mj-column>
        <mj-spacer height="20px" />
        <mj-text padding="0px 12px">  
          <mj-raw> 
              <div style="">
                <div style="background: #000000; mix-blend-mode:screen;">
                  <div style="background: #000000; mix-blend-mode:difference;">
                    <h2 style="font-size:40px; font-weight:bold; color:#E7EDF0; line-height:1.2;">Yes, we know.<br /> An email to confirm an<br /> email.</h2>
                            </div>
                       </div>
                     </div>
